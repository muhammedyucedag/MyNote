@model IEnumerable<User>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="row mb-4">
    <div class="col">
        <h3 class="display-5 border-bottom">@ViewData["Title"]</h3>
    </div>
</div>

<div class="row mb-4">
    <div class="col">
        <a class="btn btn-primary btn-sm" asp-action="Create"><i class="fa fa-plus me-2"></i>Kullanıcı Ekle</a>
    </div>
</div>

<div class="row mb-4">
    <div class="col table-responsive">
        <table class="table table-hover table-sm small">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Username)</th>
                    <th>@Html.DisplayNameFor(model => model.EMail)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.IsActive)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.IsAdmin)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedUser)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.ModifiedUser)</th>
                    <th>@Html.DisplayNameFor(model => model.ModifiedAt)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (User user in Model)
                {

                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Username</td>
                        <td>@user.EMail</td>
                        <td class="text-center">
                            <i class="fa fa-@(user.IsActive ? "check text-success" : "times text-danger")"></i>
                        </td>
                        <td class="text-center">
                            <i class="fa fa-@(user.IsAdmin ? "check text-success" : "times text-danger")"></i>
                        </td>

                        <td>@user.CreatedUser</td>
                        <td>@user.CreatedAt</td>
                        <td>@user.ModifiedUser</td>
                        <td>@user.ModifiedAt</td>
                        <td class="text-center ">

                            <font color="#b036b0" title="Kullanıcı Güncelle"><a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@user.Id"><i class="fa fa-edit"></i></a></font>

                            <font color="#b036b0" title="Kullanıcı Detay"><a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@user.Id"><i class="fa fa-search"></i></a></font>

                            <font color="#b036b0" title="Kullanıcı Sil"><a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@user.Id"><i class="fa fa-trash"></i></a></font>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>